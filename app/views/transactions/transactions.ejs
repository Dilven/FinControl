<div class="mdl-grid">
  <table id="myTable" class="mdl-data-table mdl-js-data-table mdl-shadow--2dp transactions-table">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th class="mdl-data-table__cell--non-numeric">Nazwa wydatku </th>
          <th>Data</th>
          <th>Cena</th>
        </tr>
      </thead>
      <% transactions.forEach(function (transaction) { %>
        <tbody>
          <tr class=>
            <td class="table-row-small"><i class="material-icons cursor-pointer table-icon-delete">delete_forever</i></td>
            <% if(transaction.typeId === 1) { %>
              <td class="table-row-small"><i class="material-icons md-red"><i class="material-icons">arrow_downward</i></td>
            <% } else { %>
              <td class="table-row-small"><i class="material-icons md-green"><i class="material-icons">arrow_upward</i></td>              
            <% } %>
            <td class="mdl-data-table__cell--non-numeric transaction-data" name="name"><%= transaction.name %></td>
            <td class="transaction-data" name="date"><%= transaction.transaction_date.toLocaleDateString() %></td>
            <td class="transaction-data" name="amount"><%= transaction.amount %> z≈Ç</td> 
          </tr>
        </tbody>
      <% }) %>
  </table>
  <a href='?page=2'>Zmien</a>
  <a href='?order=ASC&by=name'>Sort by name asc</a>
</div>

<script src="../js/deleteTransaction.js"></script>
