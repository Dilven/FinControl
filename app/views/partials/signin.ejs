<main class="mdl-layout__content">
	<div class="mdl-card mdl-shadow--6dp log-form">
		<div class="mdl-card__title mdl-color--primary mdl-color-text--white">
			<h2 class="mdl-card__title-text">Zaloguj się</h2>
		</div>
		<div class="mdl-card__supporting-text">
			<form action="/login" method="post">
				<div class="mdl-textfield mdl-js-textfield">
					<input name="email" class="mdl-textfield__input" type="text" id="signin-email" />
					<label class="mdl-textfield__label" for="signin-email">Email</label>
				</div>
				<div class="mdl-textfield mdl-js-textfield">
					<input name="password" class="mdl-textfield__input" type="password" id="signin-password" />
					<label class="mdl-textfield__label" for="signin-password">Hasło</label>
				</div>
				<button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" type="submit">Zaloguj</button>
			</form>
		</div>
	</div>
</main>