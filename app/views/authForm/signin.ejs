<figure class="front">
        <form action="/login" method="post" autocomplete="off">
            <div class="mdl-card mdl-shadow--6dp">
                <div class="mdl-card__title mdl-color--primary mdl-color-text--white relative">
                    <h2 class="mdl-card__title-text">Logowanie</h2>
                </div>

                <div class="mdl-card__supporting-text">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input name="email" class="mdl-textfield__input" type="text" id="signin-email"/>
                        <label class="mdl-textfield__label" for="signin-email">Email</label>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input name="password" class="mdl-textfield__input" type="password" id="signin-password"/>
                        <label class="mdl-textfield__label" for="signin-password">Hasło</label>
                    </div>
                </div>

                <div class="mdl-card__actions mdl-card--border">
                    <div class="mdl-grid">
                        <button class="mdl-cell mdl-cell--12-col mdl-button mdl-button--raised mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-color-text--white">
                            Zaloguj się
                        </button>

                    </div>

                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col">
                            <a onClick='flip("show-left")' class="mdl-color-text--primary">Zarejestruj się!</a>
                            <a onClick='flip("show-bottom")' class="mdl-color-text--primary" style="float: right">Zapomnialeś hasła?</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </figure>